<Window x:Class="NoteTakingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTakingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Welcome to collaborative note taking app"
                   FontSize="25" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="10"/>

		<StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
			<Button x:Name="checkNotes" Content="Check notes" Click="DisplayNotes"
                    FontSize="20" Margin="0,10" Height="40"/>
			<Button x:Name="addNotes" Content="Add note" Click="AddNote"
                    FontSize="20" Margin="0,10" Height="40"/>
			<Button x:Name="quit" Content="Quit" Click="Quit"
                    FontSize="20" Margin="0,10" Height="40" Width="157"/>
		</StackPanel>
	</Grid>

</Window>
