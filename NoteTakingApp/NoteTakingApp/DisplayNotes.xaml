<Window x:Class="NoteTakingApp.DisplayNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTakingApp"
        mc:Ignorable="d"
        Title="DisplayNotes" Height="450" Width="800">
	<Grid>
		<TextBox Name="searchTextBox" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" />
		<Button Name="searchButton" Content="Search" Click="SearchButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,10,0,0"/>
		<Button Name="revertButton" Content="Revert" Click="RevertButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,10,0,0"/>
		<ListBox Name="notesListBox" Margin="10,35,10,0" VerticalAlignment="Top" Height="375"/>
	</Grid>
</Window>
