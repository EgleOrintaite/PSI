<!-- LoginWindow.xaml -->
<Window x:Class="NoteTakingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter your username:"/>
            <TextBox x:Name="usernameTextBox"/>
            <CheckBox x:Name="rememberCheckBox" Content="Remember me"/>
            <Button Content="OK" Click="OKButton_Click" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>

