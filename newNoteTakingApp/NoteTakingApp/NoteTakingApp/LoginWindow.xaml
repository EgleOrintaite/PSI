<!-- LoginWindow.xaml -->
<Window x:Class="NoteTakingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="59.023"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,0,10,10" Grid.RowSpan="2">
            <TextBlock Text="Username:" Margin="0, 5, 0, 0"/>
            <TextBox x:Name="usernameTextBox"/>
            <CheckBox x:Name="rememberCheckBox" Content="Remember me" Checked="RememberCheckBox_Checked" Margin="0,5,0,0"/>
            <Button Content="OK" Click="OKButton_Click" Foreground="White" Background="#038172" Margin="0, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>

