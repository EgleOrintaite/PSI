<!-- EditNoteWindow.xaml -->
<Window x:Class="NoteTakingApp.EditNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTakingApp"
        mc:Ignorable="d"
        Title="EditNoteWindow" Height="300" Width="500">
	<Grid>
		<TextBox Name="editNoteThemeText" Margin="10,20,0,0" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
		<TextBox Name="editNoteDetailsText" Margin="20,50,10,10" TextWrapping="Wrap"/>
		<Button Content="Save Changes" Click="SaveChanges_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
	</Grid>
</Window>
