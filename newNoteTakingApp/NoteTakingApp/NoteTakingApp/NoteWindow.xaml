<Window x:Class="NoteTakingApp.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTakingApp"
        mc:Ignorable="d"
        Title="NoteWindow" Height="450" Width="800">
    <Grid>
        <!-- Centered note theme at the top with a bigger shift -->
        <TextBlock Name="noteThemeText" Margin="10,20,0,0" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Text="Note Theme" />

        <!-- Contents with a normal shift from the left -->
        <TextBlock Name="noteDetailsText" Margin="20,50,10,10" TextWrapping="Wrap" />
        
        <Button Content="Edit" Click="EditNote_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
